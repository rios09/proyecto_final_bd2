    <div class="container my-3">
        <div class="row">
            <div class="col-sm-12 col-md-4 col-lg-4 col-xl-4 py-4 bg-white bg-primary-border-subtle">
                <h2>Agregar nuevo Cliente</h2>
                <form action="/agregarC" method="post">
                    <div class="mb-1">
                        <label for="primerNombre" class="form-label">Primer Nombre:</label>
                        <input type="text" class="form-control" id="primerNombre" name="primerNombre" placeholder="Nombre 1" autofocus />
                    </div>
                    <div class="mb-1">
                        <label for="segundoNombre" class="form-label">Segundo Nombre:</label>
                        <input type="text" class="form-control" id="segundoNombre" name="segundoNombre" placeholder="Nombre 2" autofocus />
                    </div>
                    <div class="mb-1">
                        <label for="primerApellido" class="form-label">Primer Apellido:</label>
                        <input type="text" class="form-control" id="primerApellido" name="primerApellido" placeholder="Apellido 1" autofocus />
                    </div>
                    <div class="mb-1">
                        <label for="segundoApellido" class="form-label">Segundo Apellido:</label>
                        <input type="text" class="form-control" id="segundoApellido" name="segundoApellido" placeholder="Apellido 2" autofocus />
                    </div>
                    <div class="mb-1">
                        <label for="fechaNacimiento" class="form-label">Fecha de Nacimiento:</label>
                        <input type="text" class="form-control" id="fechaNacimiento" name="fechaNacimiento" placeholder="Fecha" autofocus />
                    </div>
                    <div class="mb-1">
                        <label for="cedula" class="form-label">Cédula:</label>
                        <input type="tel" class="form-control" id="cedula" name="cedula" placeholder="Identificacion" autofocus />
                    </div>
                    <div class="mb-1">
                        <label for="telefono" class="form-label">Teléfono:</label>
                        <input type="tel" class="form-control" id="telefono"  name="telefono" placeholder="Tel" autofocus />
                    </div>
                    <div class="mb-1">
                        <label for="sexo" class="form-label">Sexo:</label>
                        <input type="text" class="form-control" id="sexo" name="sexo" placeholder="Sexo" autofocus />
                    </div>

                

                
                    
                    <div class="d-grid gap-2">
                        <button class="btn btn-success">Guardar</button>
                        <button class="btn btn-secondary">Limpiar</button>
                    </div>
                </form>
            </div>
            <div class="col-sm-12 col-md-8 col-lg-8 col-xl-8 py-4 " style="background-color: rgb(18, 12, 110);">
                <h2 style="color: white;">Listado de Clientes</h2>
                <table class="table table-white table-striped">
                    <thead>
                        <tr>
                            <th class="centrado">ID</th>
                            <th class="centrado">Primer Nombre</th>
                            <th class="centrado">Segundo Nombre</th>
                            <th class="centrado">Primer Apellido</th>
                            <th class="centrado">Segundo Apellido</th>
                            <th class="centrado">Fecha de Nacimiento</th>
                            <th class="centrado"> Cédula</th>
                            <th class="centrado">Teléfono</th>
                            <th class="centrado">Sexo</th>
                          
                        </tr>
                    </thead>
                    <tbody>
                        <% clientes.forEach((cliente) => { %>
                            <tr>
                                <td class="centrado"><%= cliente.id_cliente %></td>
                                <td class="centrado"><%= cliente.primer_nombre %></td>
                                <td class="centrado"><%= cliente.segundo_nombre %></td>
                                <td class="centrado"><%= cliente.primer_apellido %></td>
                                <td class="centrado"><%= cliente.segundo_apellido %></td>
                                <td class="centrado"><%= cliente.fecha_nacimiento %></td>
                                <td class="centrado"><%= cliente.cedula %></td>
                                <td class="centrado"><%= cliente.telefono %></td>
                                <td class="centrado"><%= cliente.sexo %></td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-center my-4">
        <button type="button" class="btn btn-success me-3 btn-lg" >Desactivar</button>
        <button type="button" class="btn btn-success me-3 btn-lg" >Activar</button>
        <button type="button" class="btn btn-danger me-3" >Eliminar</button>
        <button type="button" class="btn btn-warning" >Modificar</button>
    </div>
    

</div>



