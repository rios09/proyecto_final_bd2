        <div class="row">
            <div class="col-md-6">
                <h2><i class="fas fa-shopping-cart"></i> Formulario de Compra</h2>
                <form>
                    <div class="mb-3">
                        <label for="noFactura" class="form-label">Número de Factura</label>
                        <input type="text" class="form-control" id="noFactura" required>
                    </div>
                    <div class="mb-3">
                        <label for="fechaCompra" class="form-label">Fecha de Compra</label>
                        <input type="date" class="form-control" id="fechaCompra" required>
                    </div>
                    <div class="mb-3">
                        <label for="totalCompra" class="form-label">Total de la Compra</label>
                        <input type="number" class="form-control" id="totalCompra" required>
                    </div>
                    <div class="mb-3">
                        <label for="codProveedor" class="form-label">Código de Proveedor</label>
                        <input type="text" class="form-control" id="codProveedor" required>
                    </div>
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Guardar Compra</button>
                </form>
            </div>

            <div class="col-md-6">
                <h2><i class="fas fa-box"></i> Formulario de Detalle de Compra</h2>
                <form>
                    <div class="mb-3">
                        <label for="noFacturaCompra" class="form-label">Número de Factura</label>
                        <input type="text" class="form-control" id="noFacturaCompra" required>
                    </div>
                    <div class="mb-3">
                        <label for="codigoProductoCompra" class="form-label">Código de Producto</label>
                        <input type="text" class="form-control" id="codigoProductoCompra" required>
                    </div>
                    <div class="mb-3">
                        <label for="cantComprada" class="form-label">Cantidad Comprada</label>
                        <input type="number" class="form-control" id="cantComprada" required>
                    </div>
                    <div class="mb-3">
                        <label for="precioCompra" class="form-label">Precio de Compra</label>
                        <input type="number" class="form-control" id="precioCompra" required>
                    </div>
                    <div class="mb-3">
                        <label for="subtCompra" class="form-label">Subtotal de Compra</label>
                        <input type="number" class="form-control" id="subtCompra" required>
                    </div>
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Guardar Detalle</button>
                </form>
            </div>
        </div>

