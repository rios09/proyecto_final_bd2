    <div class="container  mt-5 " >
        
        <div class="row">
            <div class="col-md-6 offset-md-3">
              <form action="/asistencia" method="post">
                <div class="mb-2">
                  <label for="id_cliente" class="form-label" style="color: white;">ID Cliente</label>
                  <input type="text" class="form-control" id="id_cliente" name="id_cliente" placeholder="Ingrese ID Cliente">
                </div>
                <button type="submit" class="btn btn-primary">Registrar Asistencia</button>
              </form>
              
            </div>
          </div>          
      
        <div class="row bg-white mt-3">
            <div class="col-md-12">
                <h2 style="color: rgb(0, 0, 0);">Registros de Hoy</h2>
                <table class="table table-primary">
                    <thead>
                        <tr>
                            <th class="centrado">No. Membresia</th>
                            <th class="centrado">Nombre</th>
                            <th class="centrado">Apellido</th>
                            <th class="centrado">Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% Asistencias.forEach((Asistencia) => { %>
                            <tr>
                                <td class="centrado"><%= Asistencia.id_membresia %></td>
                                <td class="centrado"><%= Asistencia.primer_nombre %></td>
                                <td class="centrado"><%= Asistencia.primer_apellido %></td>
                                <td class="centrado"><%= Asistencia.fecha_registro %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    
 
